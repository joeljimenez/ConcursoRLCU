@model ConcursoRLCU.Models.Login
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutPage_Login.cshtml";
}

<script src='http://cdnjs.cloudflare.com/ajax/libs/jquery/2.1.3/jquery.min.js'></script>
<div class="login-wrap">
    <a href="~/Home" style="background: #FFF;margin: auto;display: block;text-align: center;color: red;">Retornar</a>
    <div class="login-html">
        <input id="tab-1" type="radio" name="tab" class="sign-in" checked><label for="tab-1" class="tab"><a href="/Login">Login</a></label>
        <input id="tab-2" type="radio" name="tab" class="sign-up"><label for="tab-2" class="tab"><a href="/Login/Registro">Registro</a></label>

        <div class="login-form">
            <div class="sign-in-htm">
                @using (Html.BeginForm("Index", "Login", FormMethod.Post))
                {
                    //this  is for create form tag
                    @Html.AntiForgeryToken()
                    // this is for prevent CSRF attac
                    @Html.ValidationSummary(true)
                    <div class="group">
                        <label for="mail" class="label">Correo Electronico</label>
                        @Html.TextBoxFor(a => a.correo, new { id = "mail", Class = "input", autocomplete = "off", placeholder = "Correo Electronico" })
                        <samp class="alert-danger"><small>@Html.ValidationMessageFor(a => a.correo)</small> </samp>
                    </div>
                    <div class="group">
                        <label for="pass" class="label">Contraseña</label>
                        @Html.PasswordFor(a => a.Password, new { id = "pass", Class = "input", autocomplete = "off", placeholder = "Contraseña" })
                        <samp class="alert-danger"><small>@Html.ValidationMessageFor(a => a.Password)</small></samp>
                    </div>
                    <div class="group">
                        <input type="submit" class="button" value="Login">
                    </div>
                    <p class="alert-danger @ViewBag.error"><small>@ViewBag.mensaje</small> </p>
                }
                <div class="hr"></div>
                <div class="foot-lnk">
                    <a href="/Login/Recuperar_password">¿Olvidaste tu Password?</a>
                </div>
            </div>

            <div class="sign-up-htm">

            </div>

        </div>
    </div>
</div>
